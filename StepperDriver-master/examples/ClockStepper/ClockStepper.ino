void setup() {
    /*
     * Set target motor RPM=1
     */
    stepper.begin(1, MICROSTEPS);
    stepper.enable();
}

void loop() {
    /*
     * The easy way is just tell the motor to rotate 360 degrees at 1rpm
     */
    stepper.rotate(360);
}
